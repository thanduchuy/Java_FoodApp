<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="Order Food"
                android:background="#FF6600"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/banhmi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/banhmi" />

                    <ImageButton
                        android:id="@+id/banhmi_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@drawable/radius_btn" />

                    <TextView
                        android:id="@+id/banhmi_text"
                        android:onClick="banhmi_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#CC6600"
                        android:text="Bánh Mì"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/gia_banhmi"
                                android:onClick="banhmi_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giá: 15.000"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#8DEEEE"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/soluong_banhmi"
                                android:onClick="banhmi_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Số Lượng: 0"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#6E7B8B"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/comga"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/comga"/>

                    <ImageButton
                        android:id="@+id/comga_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@drawable/radius_btn" />

                    <TextView
                        android:id="@+id/comga_text"
                        android:onClick="comga_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#CC6600"
                        android:text="Cơm Gà"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/gia_comga"
                                android:onClick="comga_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giá: 35.000"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#8DEEEE"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/soluong_comga"
                                android:onClick="comga_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Số Lượng: 0"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#6E7B8B"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/miquang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/miquang"/>

                    <ImageButton
                        android:id="@+id/miquang_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@drawable/radius_btn" />

                    <TextView
                        android:id="@+id/miquang_text"
                        android:onClick="miquang_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#CC6600"
                        android:text="Mì Quảng"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/gia_miquang"
                                android:onClick="miquang_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giá: 30.000"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#8DEEEE"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/soluong_miquang"
                                android:onClick="miquang_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Số Lượng: 0"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#6E7B8B"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pho"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/pho" />

                    <ImageButton
                        android:id="@+id/pho_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:background="@drawable/radius_btn" />

                    <TextView
                        android:id="@+id/pho_text"
                        android:onClick="pho_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#CC6600"
                        android:text="Phở"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/gia_pho"
                                android:onClick="pho_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Giá: 20.000"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#8DEEEE"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/soluong_pho"
                                android:onClick="pho_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Số Lượng: 0"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                android:background="#6E7B8B"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tong"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#8B8B7A"
                                android:gravity="center"
                                android:text="Tổng"
                                android:textColor="@color/white"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tongtien"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:text="0VND"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/huy"
                            android:layout_width="220dp"
                            android:onClick="huy_btn"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Hủy Đơn"
                            android:background="#FF6A6A"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:textColor="@color/white"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#EE9A00"
                            android:gravity="center"
                            android:onClick="pay_btn"
                            android:text="Thanh Toán"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>